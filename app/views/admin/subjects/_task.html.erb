<div class="mb-10 border-bottom-1">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :duration %>
    <%= f.number_field :duration, class: "form-control", step: 1, min: 1 %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>
  <%= link_to 'Delete', '#', class: 'remove_record' %>
</div>
