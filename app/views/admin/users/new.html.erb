<% provide :title, "Create Users" %>
<% content_for :head_content do %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
  <style>
    .bootstrap-select>.dropdown-toggle.btn {
      height: calc(1.5em + 1.3rem + 2px);
    }
  </style>
<% end %>

<!--begin::Subheader-->
<div class="subheader py-3 py-lg-8 subheader-transparent" id="kt_subheader">
  <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
    <!--begin::Info-->
    <div class="d-flex align-items-center flex-wrap mr-1">
      <!--begin::Page Heading-->
      <div class="d-flex align-items-baseline flex-wrap mr-5">
        <!--begin::Page Title-->
        <h2 class="subheader-title text-dark font-weight-bold my-1 mr-3"><%= t("view.admin.user.index.subheader_title") %></h2>
        <!--end::Page Title-->
        <!--begin::Breadcrumb-->
        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold my-2 p-0">
          <li class="breadcrumb-item">
            <a href="" class="text-muted"><%= t("view.admin.user.index.breadcrumb1") %></a>
          </li>
          <li class="breadcrumb-item">
            <a href="" class="text-muted">New</a>
          </li>
        </ul>
        <!--end::Breadcrumb-->
      </div>
      <!--end::Page Heading-->
    </div>
    <!--end::Info-->
  </div>
</div>
<div class="d-flex flex-column-fluid">
  <!--begin::Container-->
  <div class="container">
    <%= render 'shared/extras/alert' %>
    <div class="card card-custom gutter-b example example-compact">
      <div class="card-header">
        <h3 class="card-title"><%= t("view.admin.user.new.title_create_user") %></h3>
        <div class="card-toolbar">
          <div class="example-tools justify-content-center">
            <span class="example-toggle" data-toggle="tooltip" title="" data-original-title="View code"></span>
            <span class="example-copy" data-toggle="tooltip" title="" data-original-title="Copy code"></span>
          </div>
        </div>
      </div>
      <!--begin::Form-->
      <%= form_for [:admin, @user], {class: "form"} do |f| %>
        <div class="card-body">
          <div class="form-group">
            <%= f.label t("view.admin.user.new.label_user_name") %><label style="color:red">*</label>
            <%= f.text_field :username, {class: "form-control #{@user.errors[:username].present? ? "is-invalid" : ""}", placeholder: ""} %>
          </div>
          <div class="form-group">
            <%= f.label t("view.admin.user.new.label_email") %><label style="color:red">*</label>
            <%= f.text_field :email, {class: "form-control #{@user.errors[:email].present? ? "is-invalid" : ""}", placeholder: ""} %>
          </div>
          <div class="form-group">
            <%= f.label t("view.admin.user.new.label_password") %><label style="color:red">*</label>
            <%= f.password_field :password, class: "form-control #{@user.errors[:password].present? ? "is-invalid" : ""}" %>
          </div>
          <div class="form-group">
            <%= f.label t("view.admin.user.new.label_password_confirmation") %><label style="color:red">*</label>
            <%= f.password_field :password_confirmation, class: "form-control #{@user.errors[:password_confirmation].present? ? "is-invalid" : ""}" %>
          </div>
          <div class="form-group">
            <%= f.label t("view.admin.user.new.label_phone_number") %>
            <%= f.text_field :phone_number, class: "form-control form-control-solid" %>
          </div>
          <div class="form-group">
            <%= f.label t("view.admin.user.new.label_department") %>
            <%= f.text_field :department, {class: "form-control form-control-solid", placeholder: ""} %>
          </div>
          <div class="form-group">
            <label><%= t("view.admin.user.new.title_role") %></label>
            <div class="checkbox-list">
              <label class="checkbox">
                <%= f.radio_button(:role, "trainee", checked: params[:role] = 0)  %>
                <span></span><%= t("view.admin.user.new.label_trainee") %></label>
              <label class="checkbox">
                <%= f.radio_button(:role, "supervisor", checked: params[:role] = 1) %>
                <span></span><%= t("view.admin.user.new.label_supervisor") %></label>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <%= f.submit t("view.admin.user.new.create_button"), class: "btn btn-primary mr-2" %>
          <button class="btn btn-secondary"><%= link_to t("view.admin.user.new.cancel_button"), admin_users_path %></button>
        </div>
      <% end %>
      <!--end::Form-->
    </div>
  </div>
</div>

<% content_for :footer_content do %>
  <% @user.errors.full_messages.each do |msg| %>
    <script>
        pushNotification("<%= msg %>", "danger")
    </script>
  <% end %>
<% end %>